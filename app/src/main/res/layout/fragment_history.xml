<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.group16.magicalbudget.HistoryActivityFragment"
    tools:showIn="@layout/activity_history"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

       <Spinner
           android:id="@+id/spnnrCatHistory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"/>

    </RelativeLayout>
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="60">

     <ListView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/lstviewHistory"
         />

 </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_weight="30"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:id="@+id/btnHistoryAdd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_add_black_24dp"
            android:background="@drawable/roundedbutton"/>

        <ImageButton
            android:id="@+id/btnHistoryGraph"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_show_chart_black_24dp"
            android:background="@drawable/roundedbutton"/>


    </LinearLayout>

</LinearLayout>
